{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div class="alert-message error">
        <a class="close" href="{{ path('fos_user_security_login') }}">Ã—</a>
        <strong>Error: </strong>
        {{ error }}
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
               <fieldset>
                <legend>Log in</legend>
                <div class="clearfix">
                    <label for="username">Username</label>
                    <div class="input">
                         <input class="xlarge" type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                </div>

                <div class="clearfix">
                    <label for="password">Password</label>
                        <div class="input">
                            <input class="xlarge" type="password" id="password" name="_password" /><br />
                            <span class="help-block">
                                <a href="{{ path('fos_user_resetting_request') }}">I forgot my password.</a>
                            </span>
                        </div>
                </div>

                <div class="input">
                <ul class="inputs-list">
                <li>
                    <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <span>Remember me</span></label>
                </div>
                </div>

                <div class="actions">
                    <input class="btn primary type" type="submit" id="_submit" name="_submit" value="Log in" />
                    <input type="reset" class="btn" value="cancel" />
                </div>
               </fieldset>
            </form>
{% endblock fos_user_content %}
