{% extends 'KunstmaanKAdminBundle:Default:layout.html.twig' %}

{% block sidebar %}
<div class="sidebar">
    {% for topnode in topnodes %}
        <h5><a href="{{ path('KunstmaanKAdminBundle_pages_edit', { 'id': topnode.id, 'entityname': topnode.refEntityname }) }}">{{ topnode }}</a></h5>
        <ul>
            {% for child in topnode.children %}
            <li><a href="{{ path('KunstmaanKAdminBundle_pages_edit', { 'id': child.id, 'entityname': child.refEntityname }) }}">{{ child }}</a></li>
            {% endfor %}
        </ul>
    {% endfor %}
</div>
{% endblock %}

{% block breadcrumb %}
	<ul class="breadcrumb">
		<li><a href="{{ path('KunstmaanKAdminBundle_homepage') }}">Home</a> <span class="divider">/</span></li>
		<li class="active">Pages</li>
	</ul>
{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>Pages</h1>
    </div>

    {{ adminlist_widget(pageadminlist, 'KunstmaanKAdminBundle_settings_users') }}

{% endblock %}
